{
  "name": "@audius/hedgehog",
  "version": "2.0.0",
  "description": "A Metamask alternative that empowers you to build good UX",
  "browser": {
    "node-localstorage": false
  },
  "dependencies": {
    "bip39": "^3.0.4",
    "browserify-cipher": "^1.0.1",
    "ethereumjs-wallet": "^1.0.2",
    "node-localstorage": "^2.2.1",
    "randombytes": "^2.1.0",
    "safe-buffer": "^5.2.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.18.9",
    "@babel/core": "^7.18.9",
    "@tsconfig/node16-strictest": "1.0.3",
    "@types/node": "^18.6.1",
    "@types/randombytes": "^2.0.0",
    "mocha": "^10.0.0",
    "nyc": "^15.1.0",
    "standard": "^17.0.0",
    "typescript": "4.7.4"
  },
  "main": "dist/index.js",
  "scripts": {
    "lint": "standard",
    "lint-fix": "npm run lint -- --fix",
    "typecheck": "tsc",
    "test": "node_modules/.bin/nyc node_modules/.bin/mocha tests/ && npm run lint"
  },
  "standard": {
    "globals": [
      "Blob",
      "self",
      "Worker",
      "postMessage",
      "describe",
      "it",
      "beforeEach"
    ]
  },
  "nyc": {
    "exclude": [
      "src/authWorker.js",
      "src/utils.js",
      "tests/**/*.js"
    ]
  },
  "author": "",
  "license": "MIT"
}
